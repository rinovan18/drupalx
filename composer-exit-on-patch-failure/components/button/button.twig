{% if url %}
  <a href="{{ url }}" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium shadow transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50
    {% if variant == 'secondary' %}
      bg-secondary text-secondary-foreground hover:bg-secondary/80
    {% elseif variant == 'outline' %}
      border border-input bg-background hover:bg-accent hover:text-accent-foreground
    {% elseif variant == 'ghost' %}
      hover:bg-accent hover:text-accent-foreground
    {% elseif variant == 'destructive' %}
      bg-destructive text-destructive-foreground hover:bg-destructive/90
    {% else %}
      bg-primary text-primary-foreground hover:bg-primary/90
    {% endif %}
    {% if size == 'sm' %}
      h-8 px-3 py-1.5 text-xs
    {% elseif size == 'lg' %}
      h-12 px-6 py-3 text-lg
    {% else %}
      h-9 px-4 py-2
    {% endif %}
    {{ modifier ? ' ' ~ modifier }}">
    {{ text }}
    {% if icon %}
      <i data-lucide="{{ icon }}" width="18" height="18" class="ml-2 h-4 w-4"></i>
    {% endif %}
  </a>
{% else %}
  <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium shadow transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50
    {% if variant == 'secondary' %}
      bg-secondary text-secondary-foreground hover:bg-secondary/80
    {% elseif variant == 'outline' %}
      border border-input bg-background hover:bg-accent hover:text-accent-foreground
    {% elseif variant == 'ghost' %}
      hover:bg-accent hover:text-accent-foreground
    {% elseif variant == 'destructive' %}
      bg-destructive text-destructive-foreground hover:bg-destructive/90
    {% else %}
      bg-primary text-primary-foreground hover:bg-primary/90
    {% endif %}
    {% if size == 'sm' %}
      h-8 px-3 py-1.5 text-xs
    {% elseif size == 'lg' %}
      h-12 px-6 py-3 text-lg
    {% else %}
      h-9 px-4 py-2
    {% endif %}
    {{ modifier ? ' ' ~ modifier }}">
    {{ text }}
    {% if icon %}
      <i data-lucide="{{ icon }}" width="18" height="18" class="ml-2 h-4 w-4"></i>
    {% endif %}
  </button>
{% endif %}
