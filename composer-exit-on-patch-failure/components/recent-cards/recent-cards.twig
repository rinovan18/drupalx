
<div class="container mx-auto px-4">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-8">
    {% block recent_card_items %}
      {%
        include '@drupalx_theme/recent-cards/recent-card-item.twig' with {
          "media": content.field_thumbnail|render,
          "title": label,
          "summary": content.field_summary|render,
          "url": url,
        } only
      %}
    {% endblock %}
  </div>
</div>
