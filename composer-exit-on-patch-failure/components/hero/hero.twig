{% import _self as hero_macros %}

{% if hero_layout == 'image_bottom_split' %}
	<div class="hero mt-6 lg:mt-12 mx-auto {{ modifier }}">
		<div class="container mx-auto px-4">
			<div class="flex flex-col lg:flex-row justify-between">
				<div class="lg:w-1/2 mb-2 lg:mb-0">
					{% if heading %}
						<h1 class="text-4xl lg:text-5xl font-semibold mb-4 lg:mb-4">
							{{ heading }}
						</h1>
					{% endif %}
				</div>
				<div class="lg:w-1/2">
					{% if summary %}
						<div class="text-xl mb-4">
							{{ summary }}
						</div>
					{% endif %}
					{% if link.url %}
						<div class="flex items-center space-x-4 mt-6">
							<a href="{{ link.url }}" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
								{{ link.title }}
							</a>
							{% if link2.url %}
								<a href="{{ link2.url }}" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2">
									{{ link2.title }}
								</a>
							{% endif %}
						</div>
					{% endif %}
				</div>
			</div>
		</div>
		{% if media %}
			<div class="mt-6 lg:mt-12 flex justify-center items-center">
				{{ media }}
			</div>
		{% endif %}
	</div>
{% else %}
	<div class="hero mx-auto {{ modifier }}">
		<div class="mb-6 lg:mb-12 text-center">
			{% if hero_layout == 'image_top' and media %}
				<div class="mb-4 lg:mb-8 flex justify-center items-center max-w-[1536px] mx-auto">
					{{ media }}
				</div>
			{% endif %}

			{% if heading %}
				<div class="max-w-3xl mx-auto">
					<h1 class="text-4xl lg:text-5xl font-semibold mb-4 lg:mb-4">
						{{ heading }}
					</h1>
				</div>
			{% endif %}

			<div class="max-w-3xl mx-auto">
				{% if summary %}
					<div class="text-xl mb-2 lg:mb-4">
						{{ summary }}
					</div>
				{% endif %}

				{% if link.url %}
					<div class="flex justify-center items-center space-x-4 mt-6">
						<a href="{{ link.url }}" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
							{{ link.title }}
						</a>
						{% if link2.url %}
							<a href="{{ link2.url }}" class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2">
								{{ link2.title }}
							</a>
						{% endif %}
					</div>
				{% endif %}
			</div>

			{% if hero_layout == 'image_bottom' and media %}
				<div class="mt-6 lg:mt-12 flex justify-center items-center max-w-[1536px] mx-auto">
					{{ media }}
				</div>
			{% endif %}
		</div>
	</div>
{% endif %}
