{% set is_expanded = false %}

{% embed '@drupalx_theme/accordion/accordion-item.twig' with {
  "item": {
    "heading": content.field_title|render,
    "accordion_instance": paragraph.id(),
    "is_expanded": is_expanded,
    "body": content.field_body|render,
    "link": content.field_link ? {
      "url": content.field_link.0.url,
      "title": content.field_link.0.title
    } : null
  }
} only %}{% endembed %}
