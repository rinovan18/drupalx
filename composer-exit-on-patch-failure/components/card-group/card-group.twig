{% set grid_cols = columns == 2 ? 'sm:grid-cols-2' : 'sm:grid-cols-2 lg:grid-cols-3' %}
<div class="space-y-6">
	{% if section_title %}
		<h2 class="text-3xl font-bold text-center mb-6 md:mb-8 w-full md:w-4/5 lg:w-3/5 mx-auto">{{ section_title }}</h2>
	{% endif %}

	<div class="grid grid-cols-1 {{ grid_cols }} lg:gap-6">
		{% block card_items %}
			{% for item in card_items %}
				<div class="mb-4">
					{% if item.type == 'custom' %}
						{%
							include '@drupalx_theme/card-group/card.twig' with {
								media: item.media,
								heading: item.heading,
								summary_text: item.summary_text,
								link: item.link,
								tags: item.tags,
								border: false,
							} only
						%}
					{% else %}
						{% include '@drupalx_theme/stat-card/stat-card.twig' with {
							media: item.media,
							heading: item.heading,
							body: item.body,
							link: item.link,
							icon: item.icon,
							border: false,
						} only
						%}
					{% endif %}
				</div>
			{% endfor %}
		{% endblock %}
	</div>
</div>
