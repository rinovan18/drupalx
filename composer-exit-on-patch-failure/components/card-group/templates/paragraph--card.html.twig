{% set
  heading_content = {
    title: content.field_title|render,
    icon: content.field_icon,
    heading_level: '3',
    modifier: 'mb-3'
  }
%}

{%
  set link = content.field_link ? {
    "url": content.field_link.0.url,
    "title": content.field_link.0.title
  } : {}
%}

{% block paragraph %}
  {% block content %}
    {% include '@drupalx_theme/card-group/card.twig' with {
        modifier: '',
        media: content.field_media,
        heading: heading_content,
        summary_text: content.field_summary,
      } only
    %}
  {% endblock %}
{% endblock paragraph %}
